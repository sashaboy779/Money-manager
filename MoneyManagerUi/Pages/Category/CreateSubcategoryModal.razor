@inherits CreateSubcategoryComponent

<EditForm Model="Model" OnValidSubmit="InvokeModelFunctionAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <p class="validation-message">
        @ErrorMessage
    </p>
    <div class="form-group">
        <label>@Resource.ParentCategoryName</label>
        <InputText @bind-Value="ParentCategory.Name" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label for="name">@Resource.SubcategoryName</label>
        <InputText @oninput="ClearError" @bind-Value="Model.Name"
                   @attributes="UniqueName.AddClassesForName(ErrorMessage)" id="name" />
    </div>
    <div class="one-row-btns">
        <button type="submit" class="default-btn create">@Resource.Create</button>
        <button @onclick="Cancel" class="default-btn cancel">@Resource.Cancel</button>
    </div>
</EditForm>