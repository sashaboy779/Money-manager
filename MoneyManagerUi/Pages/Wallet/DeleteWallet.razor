@inherits ModalComponent<WalletModel>

<div class="modal-window">
    <ul>
        <li><strong>@Resource.NameItem </strong>@Model.Name</li>
        <li><strong>@Resource.CurrencyItem </strong>@Model.Currency</li>
        <li><strong>@Resource.BalanceItem </strong>@Model.Balance</li>
    </ul>
    <div class="mt-3 text-center">
        <p>@Resource.WantDeleteWallet</p>
    </div>
    <div class="d-flex justify-content-around">
        <button @onclick="InvokeModelFunctionAsync" type="submit" class="default-btn delete">@Resource.Yes</button>
        <button @onclick="Cancel" class="default-btn cancel">@Resource.No</button>
    </div>
</div>
