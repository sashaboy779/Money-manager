@inherits ModalComponent<OperationModel>

<div class="modal-window">
    <ul>
        <li><strong>@Resource.CategoryItem </strong>@Model.Category.Name</li>
        <li><strong>@Resource.AmountItem </strong>@Model.Amount</li>
        <li><strong>@Resource.DateItem </strong>@Model.OperationDate</li>
        @if (!string.IsNullOrEmpty(Model.Note))
        {
            <li><strong>@Resource.NoteItem </strong>@Model.Note</li>
        }
    </ul>
    <div class="mt-3 text-center">
        <p>@Resource.WantDeleteOperation</p>
    </div>
    <div class="d-flex justify-content-around">
        <button @onclick="InvokeModelFunctionAsync" type="submit" class="default-btn delete">@Resource.Yes</button>
        <button @onclick="Cancel" class="default-btn cancel">@Resource.No</button>
    </div>
</div>